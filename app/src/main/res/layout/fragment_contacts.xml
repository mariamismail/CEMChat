<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackGround"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    tools:context=".Activities.MainActivity"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fab"
        android:layout_below="@id/mybar"
        android:divider= "@color/cardview_shadow_end_color"
        android:id="@+id/list_of_contacts"
       />

  <Button

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/list_of_contacts"
      android:id="@+id/invitefriend"
      android:drawableLeft="?attr/actionModeShareDrawable"
      android:drawableStart="?attr/actionModeShareDrawable"
      android:padding="20dp"
      android:text="Invite Friends"
      android:visibility="invisible"
     android:textAlignment="center"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="20sp" />


</RelativeLayout>